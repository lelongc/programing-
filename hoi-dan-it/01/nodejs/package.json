{
  "name": "01.hello-world",
  "version": "1.0.0",
  "description": "nodejs course ",
  "main": "dist/app.js",
  "scripts": {
    "test": "test ",
    "start": "tsc && node dist/app.js",
    "dev": "nodemon",
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "uninstall": "npm uninstall express @types/express typescript @types/node nodemon ts-node",
    "installdp": "npm install express @types/express typescript @types/node nodemon ts-node",
    "start:debug": "nodemon --inspect=9229 -e ts,tsx --exec node -r ts-node/register ./src/app.ts"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/app.ts",
    "ignore": [
      "dist",
      "node_modules"
    ]
  },
  "author": "drash",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "ejs": "^3.1.10"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/node": "^22.10.7",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
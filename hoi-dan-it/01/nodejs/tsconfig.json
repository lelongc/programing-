{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        // "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        // "forceConsistentCasingInFileNames": true
        "outDir": "./dist",
        "sourceMap": true,
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@config/*": [
                "./src/config/*"
            ],
            "@module/*": [
                "./src/module/*"
            ],
            "@controllers/*": [
                "./src/controllers/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@routers/*": [
                "./src/routers/*"
            ],
        }
    }
}